@using CapoteSolution.Web.Paginations
@model  PaginatedList<CapoteSolution.Web.Models.ViewModels.CopierDisplayVM>

@{
    ViewData["Title"] = "Gestión de Impresoras";
    var daysSelect = ViewBag.InvoiceDays as SelectList;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-success">Nueva Impresora</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="searchId" class="form-label">ID Impresora</label>
                <input type="text" class="form-control" id="searchId" name="searchId"
                       value="@Context.Request.Query["searchId"]">
            </div>
            <div class="col-md-3">
                <label for="searchDate" class="form-label">Día de Facturación</label>
                <select name="InvoiceDay" class="form-select">
                    <option value="0">Seleccione día</option>
                    @foreach (var day in ViewBag.InvoiceDays)
                    {
                        <option value="@day.Value" selected="@(day.Value == Context.Request.Query["InvoiceDay"].ToString())">
                            @day.Text
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="searchCustomer" class="form-label">Cliente</label>
                <input type="text" class="form-control" id="searchCustomer" name="searchCustomer"
                       value="@Context.Request.Query["searchCustomer"]">
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Filtrar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Limpiar</a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Modelo</th>
                <th>Cliente</th>
                <th>Día</th>
                <th>Correo</th>  
                <th>Ultimo Servicio</th>
                <th>Precio</th>
                <th>Vida Toner</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.MachineModelInfo</td>
                    <td>@item.CustomerName</td>
                    <td>@item.InvoiceDay</td>
                    <td>@item.MachineEmail</td>                    
                    <td>@item.LastServiceDate</td>
                    <td>@item.MonthlyPrice</td>
                    <td>
                        <!-- Barra de progreso para TonerLife -->
                        @{
                            // Asegúrate de que TonerLife está entre 0 y 1 (o 0-100)
                            double tonerPercentage = (double)item.TonerLife() * 100; // Convierte a porcentaje
                            string progressBarClass = tonerPercentage > 20 ? "bg-success" :
                            tonerPercentage > 10 ? "bg-warning" : "bg-danger";
                        }
                        <div class="position-relative" style="width: 120px;">
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar @progressBarClass"
                                     role="progressbar"
                                     style="width: @tonerPercentage%"
                                     aria-valuenow="@tonerPercentage"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                            <span class="position-absolute top-0 start-100 translate-middle px-2">
                                @tonerPercentage.ToString("0")%
                            </span>
                        </div>
                    </td>
                    <td>                        
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-key="@item.Id.ToString()" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="DetailsCopierByServicePagination" asp-route-key="@item.Id" class="btn btn-sm btn-info">Contrato</a>
                            <a asp-action="Delete" asp-route-key="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }           
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_Pagination", Model)
