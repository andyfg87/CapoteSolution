@using CapoteSolution.Web.Paginations
@model PaginatedList<CapoteSolution.Web.Models.ViewModels.MachineModelDisplayVM>

@{
    ViewData["Title"] = "Gestión de Modelos de Máquinas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-success">Nuevo Modelo Maquina</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Marca</th>
                <th>Toners Compatibles</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.BrandName</td>
                    <td>@item.TonerModel</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-key="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Details" asp-route-key="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-key="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_Pagination", Model)