@model CapoteSolution.Web.Models.ViewModels.UserDisplayVM

@{
    ViewData["Title"] = $"Detalles del Usario {Model.FullName}";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Rol:</dt>
            <dd class="col-sm-8">@Model.Role.ToString()</dd>


            <dt class="col-sm-4">Correo:</dt>
            <dd class="col-sm-8">@Model.UserName</dd>

        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>