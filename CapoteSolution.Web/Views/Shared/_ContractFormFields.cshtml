@model CapoteSolution.Web.Models.ViewModels.ContractInputVM

<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="PlanBW" class="control-label"></label>
            <input asp-for="PlanBW" class="form-control" />
            <span asp-validation-for="PlanBW" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="PlanColor" class="control-label"></label>
            <input asp-for="PlanColor" class="form-control" />
            <span asp-validation-for="PlanColor" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="ExtraBW" class="control-label"></label>
            <input asp-for="ExtraBW" class="form-control" />
            <span asp-validation-for="ExtraBW" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="ExtraColor" class="control-label"></label>
            <input asp-for="ExtraColor" class="form-control" />
            <span asp-validation-for="ExtraColor" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="form-group mb-3">
    <label asp-for="InvoiceDay" class="control-label"></label>
    <input asp-for="InvoiceDay" class="form-control" />
    <span asp-validation-for="InvoiceDay" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label asp-for="MonthlyPrice" class="control-label"></label>
    <input asp-for="MonthlyPrice" class="form-control" />
    <span asp-validation-for="MonthlyPrice" class="text-danger"></span>
</div>

<div class="col-md-6">
    <div class="d-flex align-items-center gap-3">
        <!-- Contenedor flex -->
        <div class="form-check form-switch">
            <!-- Checkbox 1 -->
            <input class="form-check-input" type="checkbox" asp-for="ChargeExtras" />
            <label class="form-check-label" asp-for="ChargeExtras"></label>
        </div>
        <div class="form-check form-switch">
            <!-- Checkbox 2 -->
            <input class="form-check-input" type="checkbox" asp-for="SelectStatus" />
            <label class="form-check-label" asp-for="SelectStatus"></label>
        </div>
    </div>
</div>

<div class="form-group mb-3">
    <label asp-for="Comments" class="control-label"></label>
    <textarea asp-for="Comments" class="form-control" rows="3"></textarea>
    <span asp-validation-for="Comments" class="text-danger"></span>
</div>
